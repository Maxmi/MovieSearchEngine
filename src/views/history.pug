extends layout 
block content
  if email
    h2 Hi #{email}!
    div#links
      a#goBacklink(href='/') Go Back to Search Page
      a#logoutlink(href='logout') Log Out
    
    h3 Your Search History
    div#history 
      table
        tr
          th Search Date
          th Search Term
          
        each item in data
          tr
            td= item.search_date.toString().slice(0,25)
            td= item.search_term.toLowerCase()  
      

  else   
    h2 You need to be logged in to access this page
    br    
    a#loginlink(href='login') Log In  
